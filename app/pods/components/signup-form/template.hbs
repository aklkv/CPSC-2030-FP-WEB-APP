<form>
  <div class="row">
    <div class="large-12 columns">
      {{input type="text" value=user.name placeholder="Full Name" autocomplete=false}}
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      {{input type="email" value=user.email placeholder="Email" autocomplete=false}}
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      {{#x-select value=user.department as |xs|}}
        <option>Select departments</option>
        {{#xs.option value="HR"}}HR{{/xs.option}}
        {{#xs.option value="Sales"}}Sales{{/xs.option}}
        {{#xs.option value="Helpdesk"}}Helpdesk{{/xs.option}}
      {{/x-select}}
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      {{input type="password" value=user.password placeholder="Password" autocomplete=false}}
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      {{input type="password" value=user.confirmPassword placeholder="Confirm Password" autocomplete=false}}
    </div>
  </div>
  <div class="row">
    <div class="large-12 large-centered columns">
      <button class="button expanded" {{action "submit"}}>Sign Up</button>
    </div>
  </div>
</form>
