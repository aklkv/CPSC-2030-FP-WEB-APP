<div class="callout large primary">
  <div class="row column text-center">
    <h1>Our Blog</h1>
  </div>
</div>

<div class="row" id="content">
  <div class="medium-8 columns">
    {{blog-posts articles=model.articles }}
  </div>

  <div class="medium-3 columns" data-sticky-container>
    <div class="sticky" data-sticky data-anchor="content">
      {{#link-to 'blog.new' class="button expanded"}}Create New Article{{/link-to}}
      {{!-- <button type="button" name="button" class="button expanded" {{action "createArticle"}}>Create New Article</button> --}}

      {{categories-widget categories=model.categories}}

      {{authors-widget authors=model.authors}}

    </div>
  </div>
</div>
